{
  "name": "timepix-api",
  "description": "Timepix API",
  "version": "0.1.0",
  "private": true,
  "license": "Commercial",
  "author": "Timepix",
  "engines": {
    "node": "^6.0.0"
  },
  "config": {
    "host": "http://localhost",
    "port": "8080",
    "with_services": "true"
  },
  "scripts": {
    "build": "gulp build",
    "clean": "npm prune && gulp clean",
    "swagger-ui": "gulp swagger-ui",
    "deploy-beta": "gcloud beta app deploy -q build/app.yaml",
    "deploy-gae": "gcloud app deploy -q build/app.yaml",
    "deploy": "cd build && DOCURL=https://timepix-dev.herokuapp.com && git init . && heroku git:remote -a timepix-dev && git add . && git commit -am \"make it better\" && git push heroku master -f && rm -rf .git",
    "gulp": "gulp",
    "lint": "gulp tslint",
    "serve": "npm run serve:web",
    "serve:web": "DOCURL=http://localhost:8080 GOOGLE_APPLICATION_CREDENTIALS=conf/key-file.json DATASTORE_PROJECT_ID=timepix-dev IMAGES_URL=https://storage.googleapis.com/timepix-dev/images LOGGER_LEVEL=debug FIREBASE_URL=https://timepix-dev.firebaseio.com gulp serve --script build/app.js --with_services $npm_package_config_with_services",
    "start": "node app.js",
    "generator": "plop",
    "test": "gulp test",
    "dredd": "dredd $npm_package_config_host:$npm_package_config_port/swagger.yaml $npm_package_config_host:$npm_package_config_port",
    "gulp:dredd": "gulp dredd --script build/app.js",
    "unittest": "gulp unittest",
    "e2etest": "gulp e2etest",
    "preinstall": "npm update",
    "postinstall": "npm prune"
  },
  "dependencies": {
    "@google-cloud/datastore": "^0.6.1",
    "babel-core": "^6.21.0",
    "cache-manager": "^2.2.0",
    "cache-manager-memcached-store": "^2.1.0",
    "data.maybe": "^1.2.2",
    "es6-promisify": "^5.0.0",
    "firebase-admin": "^4.0.6",
    "joi": "^10.1.0",
    "koa": "^1.2.4",
    "koa-bodyparser": "^2.3.0",
    "koa-cors": "0.0.16",
    "koa-qs": "^2.0.0",
    "koa-router": "^5.4.0",
    "koa-static": "^2.0.0",
    "lodash": "^4.17.2",
    "metamagical-interface": "^3.4.0",
    "metamagical-repl": "^0.3.0",
    "moment": "^2.17.0",
    "node-yaml": "^3.0.3",
    "ramda": "^0.23.0",
    "request": "^2.79.0",
    "seneca": "^3.2.2",
    "seneca-web": "^2.0.0",
    "seneca-web-adapter-koa1": "^1.0.1",
    "winston": "^2.3.0"
  },
  "devDependencies": {
    "@types/jasmine": "^2.5.41",
    "@types/joi": "^10.0.0",
    "@types/koa": "^2.0.37",
    "@types/lodash": "^4.14.50",
    "@types/node": "^7.0.0",
    "@types/request": "0.0.39",
    "@types/seneca": "^2.1.5",
    "@types/winston": "^2.2.0",
    "chai": "^3.5.0",
    "dredd": "^2.2.5",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.3.2",
    "gulp-cli": "^1.2.2",
    "gulp-env": "^0.4.0",
    "gulp-istanbul": "^1.1.1",
    "gulp-jasmine": "^2.4.2",
    "gulp-nodemon": "^2.2.1",
    "gulp-replace": "^0.5.4",
    "gulp-run": "^1.7.1",
    "gulp-shell": "^0.5.2",
    "gulp-sourcemaps": "^2.2.0",
    "gulp-tslint": "^6.1.3",
    "gulp-typescript": "^3.1.3",
    "istanbul": "^0.4.5",
    "jasmine": "^2.5.2",
    "jsonfile": "^2.4.0",
    "plop": "^1.7.3",
    "remap-istanbul": "^0.8.2",
    "run-sequence": "^1.2.2",
    "swagger-ui": "^2.2.10",
    "tslint": "^3.15.1",
    "typescript": "^2.1.4"
  }
}
